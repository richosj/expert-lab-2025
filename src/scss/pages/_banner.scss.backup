.section-banner{
  background: rgba(247, 247, 250, 1);
  padding: 60px 0px;
  @media (min-width: 1024px) {
    padding-top: 94px;
    padding-bottom: 97px;
  }
  .container{}
  .banner-text{
    h2{
      font-weight: 600;
      font-size: 24px;
      line-height: 139%;
      text-align: center;
      @media (min-width: 1024px) {
        font-size: 50px;
      }
    }
  }
  .subtext{
    text-align: center;
    font-weight: 500;
    font-size: 14px;
    line-height: 21px;
    color: #949494;
    padding: 10px 0 20px;
    @media (min-width: 1024px) {
      padding: 24px 0 44px;
      font-size: 20px;
      line-height: 33px;
    }
  }
  .actions{
    text-align: center;
    a{
      display: inline-flex;
      justify-content: center;
      align-items: center;
      width: 116px;
      height: 40px;
      border-radius: 8px;
      background-color: #222;
      color: #fff;
      font-weight: 700;
      font-size: 14px;
      line-height: 1;
      @media (min-width: 1024px) {
        width: 220px;
        height: 70px;
        font-size: 20px;
      }
    }
  }
}